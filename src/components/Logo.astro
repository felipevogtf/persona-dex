---
import { getBaseUrl } from '@utils/baseUrl';
---

<div class="logo">
  <div class="logo__background">
    <img src={getBaseUrl() + '/logo_background.png'} alt="logo background" />
  </div>

  <div class="logo__main">
    <img src={getBaseUrl() + '/logo.webp'} alt="logo" />
  </div>
</div>

<style>
  .logo {
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-content: flex-end;
    flex-direction: column;
    align-items: center;

    height: 600px;
    width: 100%;
  }

  .logo__background {
    position: absolute;
    z-index: -1;
    object-fit: contain;
    width: 100%;
    height: 100%;

    mask-image: linear-gradient(to top, rgba(0, 0, 0, 1) 50%, transparent 80%);
  }

  .logo__background img {
    width: 100%;
    height: 100%;
    object-fit: scale-down;
    aspect-ratio: 1;
  }
  .logo__main {
    position: relative;
  }

  .logo__main img {
    width: 100%;
    max-width: 300px;
    aspect-ratio: 4/3;
  }
</style>
